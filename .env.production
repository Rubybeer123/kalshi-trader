# Kalshi Trader - Production Environment Template
# Copy to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# API Configuration
# =============================================================================

# Kalshi API Key ID (from Kalshi dashboard)
KALSHI_API_KEY_ID=your_key_id_here

# Path to RSA private key file (mounted as secret in Docker/K8s)
# In Docker: /secrets/kalshi-key.pem
# In K8s: mounted from secret
KALSHI_PRIVATE_KEY_PATH=/secrets/kalshi-key.pem

# Environment: demo or production
KALSHI_ENV=production

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (production) or text (development)
LOG_FORMAT=json

# =============================================================================
# Trading Configuration
# =============================================================================

# Initial capital for trading (in USD)
INITIAL_CAPITAL=10000

# Maximum number of concurrent positions
MAX_POSITIONS=2

# Maximum exposure per position (USD)
MAX_EXPOSURE=50

# Daily loss limit (USD)
DAILY_LOSS_LIMIT=500

# Paper trading mode: true or false
# Set to false for live trading
PAPER_TRADING=false

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Metrics port
METRICS_PORT=8080

# Enable Prometheus metrics
METRICS_ENABLED=true

# =============================================================================
# Docker/K8s Paths
# =============================================================================

# Directory containing secrets (private keys, etc.)
# This directory is mounted read-only into containers
SECRETS_DIR=./secrets

# Directory for logs (mounted into containers)
LOGS_DIR=./logs

# =============================================================================
# Grafana Configuration (for docker-compose monitoring stack)
# =============================================================================

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_in_production

# Grafana root URL
GRAFANA_ROOT_URL=http://localhost:3000
